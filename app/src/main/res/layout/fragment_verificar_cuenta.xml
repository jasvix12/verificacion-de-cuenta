<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerificarCuentaFragment">

    <LinearLayout
        android:id="@+id/rectan1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/ColorNegro"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-5dp"
            android:text="Verificar Cuenta"
            android:textColor="@color/ColorFondo"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introduce el código de verificación que te hemos enviado a tu correo"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código de Verificación"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:id="@+id/et_digit_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:inputType="number"
                android:gravity="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_digit_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:inputType="number"
                android:gravity="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_digit_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:inputType="number"
                android:gravity="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_digit_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:inputType="number"
                android:gravity="center"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_reenviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Reenviar Correo"
            android:backgroundTint="#FFA500"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rectan2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/ColorNegro"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informacion legal | Politicas de privacidad"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyrigth © 2022 | OneClick Pets"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</RelativeLayout>
